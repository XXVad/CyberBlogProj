<!-- views/index.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Simple Blog</title>
  </head>
  <body>
    <h1>All Posts</h1>
    <ul>
      <% posts.forEach(post => { %>
      <li><a href="/posts/<%= post._id %>"><%= post.title %></a></li>
      <% }) %>
    </ul>
    <a href="/posts/new">New Post</a>
  </body>
</html>
